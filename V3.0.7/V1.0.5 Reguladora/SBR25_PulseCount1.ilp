(*2*)
(* Network 0 *)
(*CONVERSIÓN DEBIDO A QUE LOS TIMERS TIENEN RESOLUCIÓN DE 10 MS*)
LD    TRUE
AND(
LD    TRUE
MOVE    PTON, pTonMs
DIV    10, pTonMs
OR(
LD    TRUE
MOVE    PTOFF, pToffMs
DIV    10, pToffMs
)
)
(* Network 1 *)
(*CONDICION INICIAL*)
LD    %SM0.1
AND(
LD    TRUE
MOVE    0, pulseSt
OR(
LD    TRUE
MOVE    DI#655340, TPULSE
)
)
(* Network 2 *)
(*STATE_0*)
LD    TRUE
EQ    pulseSt, 0
AND    CH
R_TRIG
MOVE    1, pulseSt
(* Network 3 *)
(*YCHSTATE_1Cuento el TON del pulso y aplico filtrado su tiempo en alto (TON)*)
LD    TRUE
EQ    pulseSt, 1
AND(
LD    TRUE
TON   T13, 32767
__CR_EQ_1
MOVE    T13, cTimeOn
__CR_RESTORE
MOVE    2, pulseSt
OR(
LD    CH
F_TRIG
AND(
LD    TRUE
GE    cTimeOn, pTonMs
AND(
LD    TRUE
MOVE    2, pulseSt
OR(
LD    TRUE
MOVE    cTimeOn, timeOn
)
)
OR(
LD    TRUE
LT    cTimeOn, pTonMs
MOVE    0, pulseSt
)
)
)
)
(* Network 4 *)
(*YCHSTATE_2Cuento el TOFF del pulso y aplico filtrado su tiempo en alto (TOFF)*)
LD    TRUE
EQ    pulseSt, 2
AND(
LD    TRUE
TON   T14, 32767
__CR_EQ_1
MOVE    T14, cTimeOf
__CR_RESTORE
MOVE    3, pulseSt
OR(
LD    CH
R_TRIG
AND(
LD    TRUE
GE    cTimeOf, pToffMs
AND(
LD    TRUE
MOVE    3, pulseSt
OR(
LD    TRUE
MOVE    cTimeOf, timeOff
)
)
OR(
LD    TRUE
LT    cTimeOf, pToffMs
MOVE    1, pulseSt
)
)
)
)
(* Network 5 *)
(*YCHAcoto que el minim caudal que voy a medir es cuando el tiempo entre pulsos sea de dos minutos*)
LD    TRUE
NE    pulseSt, 3
TON   T81, 1200
__CR_EQ_1
MOVE    T81, int3
__CR_RESTORE
MOVE    DI#327670, TPULSE
(* Network 6 *)
(*YCHSTATE_3Se incrementa el contador de pulsosSe calcula el tiempo TON + TOFF para saber cuanto fue el periodo del ultimo pulso*)
LD    TRUE
EQ    pulseSt, 3
AND(
LD    TRUE
MOVE    1, pulseSt
OR(
LDN    RST
INC    SoftCoun
MOVE    SoftCoun, COUNT
)
OR(
LD    TRUE
AND(
LD    TRUE
I_TO_DI    timeOn, dint0
OR(
LD    TRUE
I_TO_DI    timeOff, dint1
)
)
ADD    dint0, dint1
MOVE    dint1, TPULSE
MUL    DI#10, TPULSE
)
)
(* Network 7 *)
(*YCHCuando se aplica reset se pone el cero el contador de muestras*)
LD    RST
MOVE    0, SoftCoun
MOVE    SoftCoun, COUNT
